extends ../layout.pug

block append  styles
  link(rel="stylesheet" type="text/css" href="css/createUser.css")

block content

  div(class="userForm w-80 mt-4") 
    h1(class="w-50 mx-auto text-center") Update user
    form(class="w-50 mx-auto" id="user")
      div(class="my-4")
        input(
          type="text"
          class="form-control"
          placeholder="Name"
          id="contactName"
        )
      div(class="my-4")
        input(
          type="text"
          class="form-control"
          placeholder="Password"
          id="contactEmail"
        )
      div(class="my-4")
        select(class="form-select")
          option(selected) Select Roles
          option(value="1") One
          option(value="2") Two
          option(value="3") Three

      div(class="d-flex my-4 justify-content-between")
        div(class="form-check")
          input(
            class="form-check-input"
            type="checkbox"
            value=""
            id="flexCheckDefault"
          )
          label(class="form-check-label" for="flexCheckDefault") Manage contacts

        div(class="form-check ")
          input(
            class="form-check-input"
            type="checkbox"
            value=""
            id="flexCheckChecked"
          )
          label(class="form-check-label" for="flexCheckChecked") Manage companies

        div(class="form-check")
          input(
            class="form-check-input"
            type="checkbox"
            value=""
            id="flexCheckChecked"
          )
          label(class="form-check-label" for="flexCheckChecked") Manage users



      button(type="submit" class="btn btn-primary w-100") Update

