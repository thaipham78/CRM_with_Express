extends ../layout.pug

block append  styles
  link(rel="stylesheet" type="text/css" href="/css/createCompany.css")

block content

  div(class="contactForm w-80 mt-4") 
    h1(class="w-50 mx-auto text-center") Update contact
    form(class="w-50 mx-auto" id="contact"  method="post")
      div(class="my-4")
        input(
          type="text"
          class="form-control"
          placeholder="Name"
          id="contactName"
          name="name"
          value=name
        )
        small(class="success text-danger")
      div(class="my-4")
        select(class="form-select" name="companyName" )
          option(hidden) #{selectedCompany.companyName}
          each val in companyList
            option(value=val.id ) #{val.name}

           

      div(class="my-4")
        input(
          type="text"
          class="form-control"
          placeholder="Phone"
          id="contactPhone"
          name="phone"
          value=phone
      )
        small(class="success text-danger")
      div(class="my-4")
        input(
          type="text"
          class="form-control"
          placeholder="Email"
          id="contactEmail"
          name="email"
          value=mail
        )
        small(class="success text-danger")
      button(type="submit" id="updateContact" class="btn btn-primary w-100") Update
block append scriptsbottom  
  script(type="module" src="/js/updateContact.js")


